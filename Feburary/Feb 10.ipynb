class Solution:
    def sumEvenAfterQueries(self, nums: List[int], queries: List[List[int]]) -> List[int]:
        s = sum(i for i in nums if i%2==0)
        ans = []
        for val, index in queries:
            if nums[index]%2 == 0:
                s -= nums[index]
            nums[index] += val
            if nums[index]%2 == 0:
                s += nums[index]
            ans.append(s)
            
        return ans
            
        
